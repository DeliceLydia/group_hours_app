<div class = "main">
  <div class="w-75 mx-auto shadow p-4 mt-5 mb-5">
    <h2 class="text-center title heading"> Sign In </h2>
  <div>
  <%= form_with url: sessions_path, local: true do |f| %>
    <div class= "form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"%>
    </div>
    <div class="d-flex justify-content-center mx-auto green-color rounded">
    <%= f.submit "Sign In", class: "btn d-block button"%>
    </div>
    <div class = "bottom-link mt-3 text-center">
    <%= "Don't have an account?" %>
    <%= link_to 'Sign Up', signup_path, class: "title"%>
    </div>
  <%end%>
  </div>
</div>