<% provide(:title, 'Grouping Hours') %>
<%= render 'layouts/header'%>
<div class="card">
    <div class="card-body d-flex justify-content-between">
        <span> Total Hours </span>
        <%= total_hours(@groupings) %>Hours
    </div
</div>
<div class="d-flex justify-content-center mt-3">
  <%= will_paginate @groupings, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>
<div class="space-for-new">
  <%= render @groupings %>
</div>
<div class="green-color py-3 fixed-bottom">
    <%= link_to "New Grouping", new_grouping_path, type: 'button',
    class: "btn outline w-75 mx-auto d-block py-3 text-white" %>
</div>