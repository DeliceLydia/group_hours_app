<div class="card w-75 mx-auto my-3">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <%= group_icon(grouping.groups.take) if grouping.groups.any? %>
        <%= grouping.name %>
      </div>
      <strong><%= grouping.hours%>hrs</strong>
    </div>
    <div class="card-footer">
      <%= creation_date(grouping) %>
    </div>
</div>