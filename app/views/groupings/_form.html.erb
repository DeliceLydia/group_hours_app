<div class="w-75 mx-auto shadow p-4 mt-5 mb-5">
  <%= form_with model: @grouping, local: true do |g| %>
    <div class= "form-group">
      <%= g.text_field :name, class: "form-control", placeholder: "Add name here.."%>
    </div>
    <div class="form-group">
      <%= g.number_field :hours, class: "form-control", placeholder: "Add hours here.."%>
    </div>
    <div class="input-group my-3">
      <div class="input-group-prepend">
          <%= g.label :group_id, class: 'input-group-text' %>
      </div>
      <%= g.collection_select(:group_id, Group.all, :id, :name, {include_blank: true}, {class: 'custom-select'}) %>
    </div>
    <div class="green-color w-75 mx-auto rounded">
    <%= g.submit "Submit Grouping", class: "btn button mx-auto d-block"%>
    </div>
  <%end%>
</div>
